{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6"],
    "module": "commonjs",
    "sourceRoot": "src",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "sourceMap": true,
  },
  "exclude": ["node_nodules", "scripts"],
}
